<%= link_to jogging_time.user.email, jogging_time.user, style: "z-index" if jogging_time.user.present? %>

<div id="<%= dom_id jogging_time %>" class="post-container" style="margin: auto">
  <p>
    <strong>Date:</strong>
    <%= jogging_time.date.strftime("%B %d, %Y") %>
  </p>

  <p>
    <strong>Distance:</strong>
    <%= number_with_precision(jogging_time.distance, precision: 2) %> <%= jogging_time.distance_unit %>
  </p>

  <p>
    <strong>Time:</strong>
    <%= format_duration(jogging_time.time) %>
  </p>

  <p>
    <strong>Average Speed:</strong>
    <%= number_with_precision(jogging_time.average_speed, precision: 2) %> km/h
  </p>

  <p>
    <%= link_to "", jogging_time, class: "post-link" %>
  </p>
</div>
