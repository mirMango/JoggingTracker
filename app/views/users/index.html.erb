<h1>All Users</h1>

<%= form_with(url: users_path, method: :get, local: true) do %>
  <div>
    <%= label_tag :email, "Search users by email:" %>
    <%= text_field_tag :email, params[:email] %>
    <%= submit_tag "Search" %>
  </div>
<% end %>

<% @users.each do |user| %>
  <div>
    <p>
      <%= link_to user.email, edit_user_path(user) %> |
      <%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" } %>
    </p>
  </div>
<% end %>
